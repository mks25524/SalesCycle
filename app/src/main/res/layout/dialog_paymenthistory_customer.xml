<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Status:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textView4" />
    <TextView
        android:id="@+id/showPaymentStatus"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="status"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trnx Id:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/showPaymentStatus"
        android:layout_marginTop="13dp" />
    <TextView
        android:id="@+id/showTrnxId"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="trnx id"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/showPaymentStatus" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bill:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView6"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />
    <TextView
        android:id="@+id/showTotalBill"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="total bill"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/showTrnxId" />

    <Button
        android:id="@+id/btClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

</RelativeLayout>