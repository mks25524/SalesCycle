<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tv2"
        android:layout_alignBottom="@+id/tv2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:layout_marginEnd="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp" />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/tv1"
        android:layout_alignStart="@+id/tv1" />
    <TextView
        android:id="@+id/tv4"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:layout_alignStart="@+id/tv2"
        android:layout_alignBottom="@+id/tv3"
        android:layout_below="@+id/tv2" />
    <TextView
        android:id="@+id/tv5"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/tv3"
        android:layout_alignStart="@+id/tv3"
        android:layout_marginTop="11dp" />
    <TextView
        android:id="@+id/tv6"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tv5"
        android:layout_alignBottom="@+id/tv5"
        android:layout_alignStart="@+id/tv4" />
    <TextView
        android:id="@+id/tv7"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/tv5"
        android:layout_alignStart="@+id/tv5"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/tv8"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tv7"
        android:layout_alignBottom="@+id/tv7"
        android:layout_alignStart="@+id/tv6" />
    <TextView
        android:id="@+id/tv9"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/tv7"
        android:layout_alignStart="@+id/tv7"
        android:layout_marginTop="11dp" />
    <TextView
        android:id="@+id/tv10"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tv9"
        android:layout_alignBottom="@+id/tv9"
        android:layout_alignStart="@+id/tv8" />
    <Button
        android:id="@+id/btOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ok"
        android:textStyle="bold"
        android:layout_below="@+id/tv9"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/tvtotalBil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/btOk"
        android:layout_alignStart="@+id/tv10"
        android:layout_alignEnd="@+id/tv10"
        android:layout_alignTop="@+id/btOk" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bill"
        android:layout_alignTop="@+id/btOk"
        android:layout_toEndOf="@+id/btOk"
        android:layout_marginStart="26dp"
        android:layout_alignBottom="@+id/btOk"
        android:textStyle="bold"

        android:textAlignment="center"/>


</RelativeLayout>