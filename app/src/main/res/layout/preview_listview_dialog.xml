<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:id="@+id/tvUse"
    android:text="Product       Qty         Price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lvPreviewDialog"
        android:layout_width="338dp"
        android:layout_height="382dp"

        android:layout_below="@+id/tvUse">

    </ListView>
    <TextView
        android:text="Total Price"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/tvShowTotalprice"
        android:layout_alignBottom="@+id/tvShowTotalprice"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tvShowTotalprice"
        android:hint="Total Price"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColorHighlight="#ec09c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvPreviewDialog"
        android:layout_alignEnd="@+id/lvPreviewDialog"
        android:layout_marginTop="14dp" />
</RelativeLayout>