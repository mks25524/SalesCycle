<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Status:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textView4" />
    <TextView
        android:id="@+id/showPaymentStatus"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="status"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delever Status:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/showPaymentStatus" />
    <TextView
        android:id="@+id/showDeleverStatus"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="status"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/showPaymentStatus" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />
    <TextView
        android:id="@+id/showAddress"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="status"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/showDeleverStatus" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />
    <TextView
        android:id="@+id/showName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textStyle="bold"
        android:layout_below="@+id/showAddress"
        android:layout_alignStart="@+id/showAddress" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />
    <TextView
        android:id="@+id/showShopName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="shop Name"
        android:textStyle="bold"
        android:layout_below="@+id/showName"
        android:layout_alignStart="@+id/showName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView9"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView8" />
    <TextView
        android:id="@+id/showMobile"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Mobile"
        android:textStyle="bold"
        android:layout_below="@+id/showShopName"
        android:layout_alignStart="@+id/showShopName" />

    <Button
        android:id="@+id/btClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="12dp" />

</RelativeLayout>