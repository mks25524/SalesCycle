<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uuproject2.mks.salescycle.Comp.customer.CustomerProfileActivity">

    <ImageView
        android:src="@mipmap/purchase_history"
          android:id="@+id/imPurchaseHistory"
        android:layout_width="100dp"
        android:layout_height="128dp"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/purchaseCustomer"
        android:layout_width="100dp"
        android:layout_height="128dp"
        android:src="@mipmap/purchase"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imPurchaseHistory"
        />
    <ImageView
        android:id="@+id/imPaymentHistory"
        android:layout_width="100dp"
        android:layout_height="128dp"
        android:src="@mipmap/payments"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/purchaseCustomer" />
    <ImageView
        android:id="@+id/imLogout"
        android:layout_width="100dp"
        android:layout_height="128dp"
        android:src="@mipmap/logout"
        android:layout_below="@+id/imPurchaseHistory"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

</RelativeLayout>
